<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="splash_screen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_img</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="btn_qr" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="title_text">
        <item name="android:textSize">31sp</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sub_text">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="item_title_text">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="item_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="main_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="point_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/disabled_text</item>
    </style>

    <style name="cardview_positive_btn" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="cardview_negative_btn" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainGreen</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/mainGreen</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="expand">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="expand_card" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/Widget.MaterialComponents.CardView.MyCardCut</item>
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">@color/mainGreen</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.MyCardCut">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>

    <style name="home_card_expand" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/Widget.MaterialComponents.CardView.HomeExpandCardCut</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.HomeExpandCardCut">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>