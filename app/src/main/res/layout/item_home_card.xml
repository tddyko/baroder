<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemfavoriteStoreVisitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingHorizontal="37dp"
    android:paddingTop="16dp"
    android:paddingBottom="20dp">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/visitor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:alignItems="center"
        app:flexDirection="row"
        app:justifyContent="flex_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/title_text"
            android:layout_width="180dp"
            android:layout_height="87dp"
            android:text="@string/hello_baroder" />

    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/shop_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingEnd="0dp"
        app:alignItems="center"
        app:flexDirection="row"
        app:justifyContent="flex_end"
        app:layout_constraintTop_toBottomOf="@+id/visitor_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shop_img" />

    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/empty_point_card"
        style="@style/main_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_max="267dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/empty_store_name"
                style="@style/title_sub_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/primary_color_text"
                app:layout_constraintHeight_max="31dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:text="아직 등록된 매장이 없어요 :(" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/empty_point"
                style="@style/title_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_max="46dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/empty_store_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:text="0 P" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/empty_main_text"
                style="@style/main_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_max="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/empty_point"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:text="회원가입하고 매장 포인트를 확인하세요!" />

            <com.skydoves.progressview.ProgressView
                android:id="@+id/empty_point_progress"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                app:layout_constraintHeight_max="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/empty_main_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:progressView_autoAnimate="true"
                app:progressView_colorBackground="@color/stroke"
                app:progressView_colorGradientCenter="@color/goldgreen"
                app:progressView_colorGradientEnd="@color/starYellow"
                app:progressView_colorGradientStart="@color/mainGreen"
                app:progressView_max="500"
                app:progressView_min="0"
                app:progressView_progress="60"
                app:progressView_progressFromPrevious="true" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/empty_point_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_min="20dp"
                android:layout_marginTop="4dp"
                app:alignItems="center"
                app:flexDirection="row"
                app:justifyContent="space_between"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/empty_point_progress">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/empty_start_point"
                    style="@style/point_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    tools:text="0" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/empty_end_point"
                    style="@style/point_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    tools:text="999999" />
            </com.google.android.flexbox.FlexboxLayout>


            <Button
                android:id="@+id/empty_first_btn"
                style="@style/cardview_positive_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintHeight_max="54dp"
                app:layout_constraintTop_toBottomOf="@+id/empty_point_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/empty_second_btn"
                tools:text="단골매장 설정" />

            <Button
                android:id="@+id/empty_second_btn"
                style="@style/cardview_negative_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_max="54dp"
                app:layout_constraintStart_toEndOf="@+id/empty_first_btn"
                app:layout_constraintTop_toBottomOf="@+id/empty_point_text"
                tools:text="바로더 알아보기" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>