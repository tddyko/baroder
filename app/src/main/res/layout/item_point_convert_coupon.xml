<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingTop="20dp"
    android:paddingHorizontal="20dp"
    android:layout_marginBottom="6dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/point_convert_coupon"
        style="@style/card_radius_12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn_grey"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_coupon_img_500_b"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/point_convert_coupon_title"
        style="@style/item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:maxLines="1"
        android:textColor="@color/primary_color_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/point_convert_coupon"
        app:layout_constraintTop_toTopOf="@id/point_convert_coupon"
        tools:text="할인 쿠폰" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/point_convert_coupon_sub_title"
        style="@style/item_text"
        android:textColor="@color/primary_color_text"
        android:maxLines="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/point_convert_coupon_title"
        app:layout_constraintStart_toEndOf="@id/point_convert_coupon"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="500원" />


    <com.google.android.material.textview.MaterialTextView
        style="@style/item_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/primary_color_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/point_convert_coupon"
        app:layout_constraintTop_toBottomOf="@id/point_convert_coupon_sub_title"
        tools:text="500 P" />

</androidx.constraintlayout.widget.ConstraintLayout>