<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/onboarding_viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="455dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
        android:id="@+id/onboarding_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsColor="@color/mainGreen"
        app:dotsSize="6dp"
        app:dotsSpacing="6dp"
        app:dotsStrokeColor="@color/stroke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboarding_viewpager"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        style="@style/onboarding_complete_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="54dp"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboarding_indicator"
        android:text="@string/onboarding_start"
        app:layout_constraintVertical_bias="0.8" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/skip_btn"
        style="@style/item_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/disabled_text"
        app:layout_constraintHeight_max="24dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_indicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/next_btn"
        android:gravity="start"
        app:layout_constraintVertical_bias="0.8"
        tools:text="SKIP" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/next_btn"
        style="@style/item_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/mainGreen"
        app:layout_constraintHeight_max="24dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/skip_btn"
        android:gravity="end"
        app:layout_constraintVertical_bias="0.8"
        tools:text="다음" />


</androidx.constraintlayout.widget.ConstraintLayout>